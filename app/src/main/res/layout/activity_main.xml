<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please entre the details below"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/texttitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please entre the details below"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/texttitle"/>
    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:textSize="24dp"
        android:layout_below="@+id/texttitle1"
        android:inputType="number"/>
    <EditText
        android:id="@+id/modele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="modele"
        android:textSize="24dp"
        android:layout_below="@+id/id" />
    <EditText
        android:id="@+id/marque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="marque"
        android:textSize="24dp"
        android:layout_below="@+id/modele" />

    <EditText
        android:id="@+id/prix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="prix"
        android:textSize="24dp"
        android:layout_below="@+id/marque"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Insert New Data"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/prix"
        />
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Update Data"
        android:layout_below="@+id/btnInsert"
        />
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Delete Existing Data"
        android:layout_below="@+id/btnUpdate"
        />
    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="View Data"
        android:layout_below="@+id/btnDelete"
        />
    <Button
        android:id="@+id/btnDeleteDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Delete DB"
        android:layout_below="@+id/btnView"
        android:backgroundTint="@android:color/holo_red_dark"
        />
    <Button
        android:id="@+id/btnFiltre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="filter"
        android:layout_below="@+id/btnDeleteDB"
android:layout_marginHorizontal="60dp"
        />
</RelativeLayout>